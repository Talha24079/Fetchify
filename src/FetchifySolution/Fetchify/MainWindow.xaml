<Window x:Class="Fetchify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fetchify" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Content="Add Download"
                Width="120"
                Height="30"
                Margin="0,0,10,0"
                Click="AddDownload_Click" />
            <Button Content="Pause"
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Click="PauseDownload_Click" />
            <Button Content="Resume"
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Click="ResumeDownload_Click" />
            <Button Content="Remove"
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Click="RemoveDownload_Click" />

        </StackPanel>

        <DataGrid Name="DownloadDataGrid" 
                  Margin="10,50,10,10" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Downloads}" 
                  HeadersVisibility="Column"
                  GridLinesVisibility="All" 
                  IsReadOnly="True" 
                  AlternatingRowBackground="LightGray" 
                  RowHeaderWidth="0" 
                  MouseDoubleClick="DownloadDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" />
                <DataGridTextColumn Header="Size" Binding="{Binding TotalSize}" Width="100" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                <DataGridTextColumn Header="Progress" Binding="{Binding Progress}" Width="100" />
                <DataGridTextColumn Header="Speed" Binding="{Binding Speed}" Width="100" />
                <DataGridTextColumn Header="ETA" Binding="{Binding EstimatedTimeRemaining}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
