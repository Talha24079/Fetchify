<Window x:Class="Fetchify.Views.DownloadStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Status"
        Height="300"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10">

            <!-- File Name -->
            <TextBlock x:Name="FileNameTextBlock"
                       FontSize="16"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Downloaded Size / Total Size -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock x:Name="DownloadedSizeTextBlock" FontSize="14" />
                <TextBlock Text=" / " FontSize="14" Margin="5,0"/>
                <TextBlock x:Name="TotalSizeTextBlock" FontSize="14" />
            </StackPanel>

            <!-- Progress Bar -->
            <Grid Height="30" Margin="0,10,0,0">
                <ProgressBar x:Name="ProgressBar" Height="30" Foreground="Green" />
                <TextBlock x:Name="ProgressText" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="Black"/>
            </Grid>

            <!-- Status, Speed, ETA -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <StackPanel Margin="10,0" Width="120">
                    <TextBlock Text="Status" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StatusTextBlock" Text="..." HorizontalAlignment="Center" FontSize="13"/>
                </StackPanel>

                <StackPanel Margin="10,0" Width="120">
                    <TextBlock Text="Speed" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="SpeedTextBlock" Text="..." HorizontalAlignment="Center" FontSize="13"/>
                </StackPanel>

                <StackPanel Margin="10,0" Width="120">
                    <TextBlock Text="ETA" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="EtaTextBlock" Text="..." HorizontalAlignment="Center" FontSize="13"/>
                </StackPanel>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessageTextBlock"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="Red"
                       TextAlignment="Center"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="PauseButton" Content="Pause" Width="120" Height="35" Margin="5" Click="PauseButton_Click"/>

                <!-- Resume/Retry in same space -->
                <Grid Width="120" Height="35" Margin="5">
                    <Button x:Name="ResumeButton"
                            Content="Resume"
                            Click="ResumeButton_Click"
                            Visibility="Visible"/>

                </Grid>

                <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="35" Margin="5" Click="CancelDownload_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
