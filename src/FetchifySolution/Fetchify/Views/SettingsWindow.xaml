<Window x:Class="Fetchify.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="420"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" >

            <TextBlock Text="Default Download Directory:" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="DownloadDirBox" Width="270" Margin="0,5,10,5" />
                <Button Content="Browse" Width="80" Click="Browse_Click" />
            </StackPanel>

            <TextBlock Text="Max Concurrent Downloads:" FontWeight="Bold" Margin="0,10,0,0" />
            <TextBox x:Name="MaxConcurrentBox" Width="80" Margin="0,5,0,5" />

            <TextBlock Text="Aria2 RPC Host:" FontWeight="Bold" />
            <TextBox x:Name="RpcHostBox" Width="150" Margin="0,5,0,5" />

            <TextBlock Text="Aria2 RPC Port:" FontWeight="Bold" />
            <TextBox x:Name="RpcPortBox" Width="80" Margin="0,5,0,5" />

            <TextBlock Text="Aria2 Secret Token (optional):" FontWeight="Bold" />
            <PasswordBox x:Name="TokenBox" Margin="0,5,0,5" />

            <CheckBox x:Name="MinimizeTrayCheck" Content="Launch minimized to system tray" Margin="0,5,0,0" />

            <CheckBox x:Name="AutoStartCheck" Content="Auto Start Aria2 on Launch" Margin="0,10,0,0"/>
            <CheckBox x:Name="NotificationsCheck" Content="Enable Notifications" Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Restore Defaults" Width="120" Margin="0,0,10,0" Click="RestoreDefaults_Click"/>
                <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click" />
                <Button Content="Cancel" Width="80" Click="Cancel_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
